<%- include('partials/header.ejs') -%>

<h1>Home</h1>
<p><%= homeStartingContent %></p>
<% posts.forEach((post)=>{ %>
    <div>
        <h2><%= post.title %></h2>
        <p>
            <% if(post.content.length > 300) { %>
            <%= post.content.substring(0, 300) + " ..."%> 
            <a href= "/posts/<%= post.title %>">Read More</a>
            <% } else { %>
            <%= post.content %>
            <% } %>
        </p>
    </div> 
<% }) %>

<%- include('partials/footer.ejs') -%>